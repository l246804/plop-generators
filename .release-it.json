{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "release: v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "release v${version}"
  },
  "hooks": {
    "before:init": ["pnpm run build"],
    "after:bump": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug fixes"
          },
          {
            "type": "chore",
            "section": "Chores"
          },
          {
            "type": "refactor",
            "section": "Refactors"
          },
          {
            "type": "doc",
            "section": "Docs"
          },
          {
            "type": "style",
            "section": "Styles"
          }
        ]
      }
    }
  }
}